{
  "expo": {
    "name": "Worker Housing System",
    "slug": "worker-housing-system",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.workerhousingsystem"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourcompany.workerhousingsystem",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload payment proof.",
          "cameraPermission": "The app needs access to your camera to take photos of payment proof."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification_icon.png",
          "color": "#2563eb",
          "sounds": [
            "urgent.wav"
          ],
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "#{unread_notifications} إشعارات جديدة",
          "iosDisplayInForeground": true,
          "androidImportance": "max",
          "androidShowBadge": true,
          "androidVibrate": [
            0,
            250,
            250,
            250
          ],
          "androidChannelId": "default",
          "androidChannelName": "Default",
          "androidChannelDescription": "Default notifications channel",
          "channels": [
            {
              "name": "default",
              "importance": "max",
              "sound": "default",
              "enableVibrate": true,
              "vibrationPattern": [
                0,
                250,
                250,
                250
              ],
              "lightColor": "#2563eb"
            },
            {
              "name": "urgent",
              "importance": "max",
              "sound": "urgent.wav",
              "enableVibrate": true,
              "vibrationPattern": [
                0,
                500,
                250,
                500
              ],
              "lightColor": "#ef4444"
            }
          ]
        }
      ]
    ]
  }
}